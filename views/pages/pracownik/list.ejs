<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Lista Pracowników</h2>
        <table class="table-Prac">
           <thead>
               <tr>
               <th>Imię</th>
               <th>Nazwisko</th>
               <th>Data urodzenia</th>
               <th>Stanowisko</th>
               <th>Stan Cywilny</th>
               <th>Magazyn</th>
               <th>Firma</th>
               <th>Akcje</th>
            </tr>
           </thead>
           <tbody>
            <% for (let prc of pracownicy) { console.log(pracownicy) %>
               <tr>
                   <td><%= prc.prc_imie %></td>
                   <td><%= prc.prc_nazwisko %></td>
                   <td><%= prc.prc_dataUrodzenia.toISOString().split('T')[0]%></td>
                   <td><%= prc.prc_stanowisko %></td>
                   <td><%= prc.prc_stanCywilny %></td>
                   <td><%= prc.magazyn.mag_nazwa %></td>
                   <td><%= prc.firma.frm_nazwa  %></td>
                   <td>
                    <ul>
                        <li>
                            <a href="/employees/details/<%=prc.prc_id%>" class="list-actions-button-details">Szczegóły</a>
                        </li>
                        <li>
                            <a href="/employees/edit/<%=prc.prc_id%>" class="list-actions-button-edit ">Edytuj</a>
                        </li>
                        <li>
                            <a href="/employees/delete/<%=prc.prc_id%>" class="list-actions-button-delete">Usuń</a>
                        </li>
                    </ul>
                </td>
               </tr>
               <% } %>
           </tbody>
        </table>
        <form class="form-editbtns">
            <a href="employees/add" class="button-add">Dodaj nowego pracownika</a>
            <a href="/" class="button-return">Wróć na stronę główną</a>
         </form>        
        </main>
<%- include('../../fragments/footer.ejs') %>