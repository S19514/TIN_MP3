            <label for="mag_iloscSkanerow">Ilość Skanerów:</label>
            <input class="<%= validationErrors.find(e => e.path.includes('mag_iloscSkanerow')) ? 'error-input' : '' %>" type="number" name="mag_iloscSkanerow" id ="mag_iloscSkanerow" placeholder="liczba całkowita dodatnia" value="<%= mag.mag_iloscSkanerow%>"
            <!-- <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
            <span id="errormag_iloscSkanerow" class="errors-text">
                <% if (validationErrors.find(e => e.path.includes('mag_iloscSkanerow'))) { %>
                    <%= validationErrors.find(e => e.path.includes('mag_iloscSkanerow')).message %>
                    <% } %>
            </span> 
            
            <div class="form-buttons">
                <p id="errorsSummary" class="error-text"></p>
                <% if (formMode != 'showDetails') { %>
                    
                    <input class="form-button-submit" type="submit" value="<%=btnLabel%>" />
                    <a class="form-button-cancel" href="/warehouses">Anuluj</a>            
                <% } else { %>
                    
                    <a class="form-button-cancel" href="/warehouses">Powrót</a>
                <% } %>
            </div> <p> </p>         
                <% if (formMode == 'showDetails' || formMode == 'edit') {%>
                    <h2>
                        Lista Magazynierów
                    </h2>                    
                    <table class="table-Prac">
                        <thead>
                            <tr>
                                <th>Imię</th>
                                <th>Nazwisko</th>
                                <th>Data urodzenia</th>
                                <th>Stanowisko</th>
                                <th>Stan Cywilny</th>
                                <th>Firma</th>
                            </tr>
                        </thead>
                        <tbody>
                        <%if(mag.pracownicy)  for (let p of mag.pracownicy) { %>
                            <tr>
                                <td><a href="/employees/details/<%= p.prc_id %>"><%= p.prc_imie %></a></td>
                                <td><%= p.prc_nazwisko %></td>
                                <td><%= p.prc_dataUrodzenia.toISOString().split('T')[0] %></td>
                                <td><%= p.prc_stanowisko %></td>
                                <td><%= p.prc_stanCywilny %></td>                                
                                <td><%= p.firma.frm_nazwa %></td> 
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                <% } %>
