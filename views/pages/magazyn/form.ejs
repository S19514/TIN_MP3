<%- include('../../fragments/header.ejs') %>
    <main>
        <script type="application/javascript" src="/js/validationMagazynForm.js"></script>
        <h2><%= pageTitle %></h2>
        <form class="form" method="post" action="<%=formAction%>"  >
            <!-- onsubmit="return validateForm();" -->
            <input type="hidden" name="mag_id" value="<%= mag.mag_id%>">    

            <label for="mag_kod">Kod magazynu: <span class="symbol-required">*</span></label>
            <input class="<%= validationErrors.find(e => e.path.includes('mag_kod')) ? 'error-input' : '' %>" type="text" name="mag_kod" id ="mag_kod" placeholder="2-25 znaków" value="<%= mag.mag_kod%>" 
            <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
            <span id="errormag_kod" class="errors-text">
                <% if (validationErrors.find(e => e.path.includes('mag_kod'))) { %>
                    <%= validationErrors.find(e => e.path.includes('mag_kod')).message %>
                    <% } %>
            </span>
            

            <label for="mag_nazwa">Nazwa magazynu: <span class="symbol-required">*</span></label>
            <input class="<%= validationErrors.find(e => e.path.includes('mag_nazwa')) ? 'error-input' : '' %>" type="text" name="mag_nazwa" id ="mag_nazwa" placeholder="2-100 znaków" value="<%= mag.mag_nazwa%>"
                <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
            <span id="errormag_nazwa" class="errors-text">
                <% if (validationErrors.find(e => e.path.includes('mag_nazwa'))) { %>
                    <%= validationErrors.find(e => e.path.includes('mag_nazwa')).message %>
                    <% } %>
            </span>
            

            <label for="mag_krajPrefix">Prefiks Kraju(ISO): <span class="symbol-required">*</span></label>
            <input class="<%= validationErrors.find(e => e.path.includes('mag_krajPrefix')) ? 'error-input' : '' %>" type="text" name="mag_krajPrefix" id ="mag_krajPrefix" placeholder="2-5 znaków" value="<%= mag.mag_krajPrefix%>"
            <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
            <span id="errormag_krajPrefix" class="errors-text">
                <% if (validationErrors.find(e => e.path.includes('mag_krajPrefix'))) { %>
                    <%= validationErrors.find(e => e.path.includes('mag_krajPrefix')).message %>
