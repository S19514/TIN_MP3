            <input class="<%= validationErrors.find(e => e.path.includes('mag_iloscRegalow')) ? 'error-input' : '' %>" type="number" name="mag_iloscRegalow" id ="mag_iloscRegalow" placeholder="liczba całkowita dodatnia" value="<%= mag.mag_iloscRegalow%>"
            <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
